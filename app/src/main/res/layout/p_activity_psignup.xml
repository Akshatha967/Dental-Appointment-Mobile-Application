<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i4"
    tools:context=".p_Signup">

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="201dp"
        android:background="#7C61DD"
        android:text="@string/signup_btn"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pemail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Username :"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/pemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ppwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Email :"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/ppwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn2"
        android:layout_alignStart="@+id/pemail"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Password :"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn2"
        android:layout_alignStart="@id/ppwd"
        android:layout_marginStart="-37dp"
        android:layout_marginBottom="35dp"
        android:text="Gender : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn2"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:layout_alignEnd="@id/ppwd"
        >

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Female" />

    </RadioGroup>


    <TextView
        android:id="@+id/TextViewSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:text="@string/textviewsignin"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="PATIENT SIGNUP"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#6161AA"
        android:textStyle="bold" />

</RelativeLayout>

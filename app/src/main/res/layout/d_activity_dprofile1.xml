<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:layout_gravity="center"
        android:background="@drawable/i6"
        android:orientation="vertical"
        tools:context=".d_profile1"

        android:padding="5dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/circlebg"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:id="@+id/dclose"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <EditText
            android:id="@+id/dname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR NAME"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/demail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR EMAIL"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR PHONE"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR GENDER"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dspec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR SPECIALIZATION"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#7C61DD"
            android:hint="YOUR LOCATION"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:background="@drawable/submitbtn"

            android:text="SUBMIT"
            android:textColor="#7C61DD" />


    </LinearLayout>
</LinearLayout>

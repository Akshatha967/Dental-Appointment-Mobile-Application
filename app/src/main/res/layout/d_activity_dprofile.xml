<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/i12"
    tools:context=".d_profile"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >


        <Button
            android:id="@+id/dprof_btn"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:layout_marginLeft="315dp"
            android:background='@drawable/circlebg'
            android:gravity="center"
            android:text="PROFILE"

            android:textColor="@color/black"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="145dp"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"

            android:text="WELCOME"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doc_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="147dp"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:text="USER_NAME"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="126dp"
            android:layout_height="73dp"

            app:srcCompat="@drawable/dentaldiarylogo" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/dconfirmappt"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:background="#E1A2CA"
        android:text="CONFIRM APPOINTMENT"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/d_myAppt"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:background="#FFE1A2CA"
        android:text="MY APPOINTMENT"
        android:textColor="@color/white" />
</LinearLayout>



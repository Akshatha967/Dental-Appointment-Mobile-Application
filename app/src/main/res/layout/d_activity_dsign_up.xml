<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".d_signUp"
    android:background="@drawable/i1">

    <Button
        android:id="@+id/dsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="166dp"
        android:background="#7C61DD"
        android:text="@string/signup_btn"
        android:layout_centerHorizontal="true"

        android:textColor="#fff" />

    <EditText
        android:id="@+id/dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/demail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Username :"
        android:inputType="textPersonName"

        android:textColor="@color/black" />

    <EditText
        android:id="@+id/demail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dpwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Email :"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/dpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dsignup"
        android:layout_alignStart="@+id/demail"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Password :"
        android:textColor="@color/black"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dsignup"
        android:layout_alignStart="@id/dpwd"
        android:layout_marginBottom="35dp"
        android:text="Gender : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dsignup"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:layout_alignEnd="@id/dpwd"
        >

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>

    </RadioGroup>


    <TextView
        android:id="@+id/dSignInTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="107dp"
        android:text="@string/textviewsignin"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dname"
        android:layout_marginBottom="111dp"
        android:layout_centerHorizontal="true"
        android:text="DOCTOR SIGNUP"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#6161AA"
        android:textStyle="bold" />

</RelativeLayout>
